{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "lib": ["dom", "ES2015"],
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "dist"
  },
  "include": ["src", "declaration.d.ts", ".eslintrc.js", "rollup.config.mjs"],
  "exclude": ["**/dist", "**/node_modules"]
}
